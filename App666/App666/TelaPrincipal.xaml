<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App666.TelaPrincipal">
    <ContentPage.Content>
        <StackLayout Padding="50,30">
            <Label Text="Selecione uma opção!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Atividades" Clicked="OnButtonAtividadesClicked" />
            <Button Text="Clientes" Clicked="OnButtonClienteClicked" />
            <Button Text="Meus Dados" Clicked="OnButtonMeusDadosClicked" />
            <Button Text="Sair" Clicked="OnButtonSairClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>